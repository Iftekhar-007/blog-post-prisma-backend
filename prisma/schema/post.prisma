model Post {
    id        String     @id @default(uuid())
    title     String     @db.VarChar(250)
    content   String     @db.Text
    thumbnail String?
    isFeatued Boolean    @default(false)
    status    PostStatus @default(Published)
    tags      String[]
    views     Int        @default(0)
    authorId  String
    createdAt DateTime   @default(now())
    updatedAt DateTime   @updatedAt
    comments  Comment[]

    @@index([authorId])
    @@index([status])
    @@map("Posts")
}

enum PostStatus {
    Draft
    Published
    Archived
}
