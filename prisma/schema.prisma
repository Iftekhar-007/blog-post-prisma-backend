generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Post {
  id        String     @id @default(uuid())
  title     String     @db.VarChar(250)
  content   String     @db.Text
  thumbnail String?
  isFeatued Boolean    @default(false)
  status    PostStatus @default(Published)
  tags      String[]
  views     Int        @default(0)
  authorId  String
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  comments  Comment[]

  @@index([authorId])
  @@index([status])
  @@map("Posts")
}

model Comment {
  id        String        @id @default(uuid())
  content   String        @db.Text
  authorId  String
  postId    String
  post      Post          @relation(fields: [postId], references: [id])
  parentId  String?
  parent    Comment?      @relation("commentReply", fields: [parentId], references: [id])
  comments  Comment[]     @relation("commentReply")
  status    CommentStatus @default(Approved)
  createdAt DateTime      @default(now())
  updatedAt DateTime      @updatedAt

  @@index([authorId])
  @@index([postId])
}

enum PostStatus {
  Draft
  Published
  Archived
}

enum CommentStatus {
  Reject
  Approved
}
